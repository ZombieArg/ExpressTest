extends layout

include _include/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col.col-sm-8
      .error= message
      .row.list-group
        each location in locations
         .col-xs-12.list-group-item
          h4
           a(href='/locations')= location.name
           small &nbsp;
             +outputRating(location.rating)
           span.badge.pull-right.badge-default= location.distanceMeters
          p.address= location.address
          p
           +outputFacilities(location.facilities)
    .col-xs-12.col.col-sm-4
      p.lead!= sidebar
